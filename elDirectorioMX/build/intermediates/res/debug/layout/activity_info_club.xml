<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/White" >
    
    <ImageView 
        android:id="@+id/headerclub"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/header_eldirectorio2"
        android:background="@color/White"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp"
        android:contentDescription="@string/logo_el_directorio"/>

    <TextView
        android:id="@+id/tvMiembroClub"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
		android:layout_below="@id/headerclub"
		android:layout_margin="20dp"
        android:text="@string/_deseas_ser_miembro_del_club_"
        android:textColor="@color/Gray"
        android:textSize="20sp"
        android:textStyle="bold" />
    
    <TextView
        android:id="@+id/tvMasInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvMiembroClub"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:text="@string/m_s_informaci_n_en_"
        android:textColor="@color/Blue2"
        android:textSize="20sp"
        android:textStyle="bold" />
    
    <TextView
        android:id="@+id/tvVentas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/tvMasInfo"
        android:layout_margin="20dp"
        android:text="@string/ventas_mail"
        android:textColor="@color/Blue2"
        android:textSize="20sp"
        android:textStyle="bold" />
    
   
    
    <com.devspark.sidenavigation.SideNavigationView
        android:id="@+id/info_club_sidenavigationview"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</RelativeLayout><!-- From: file:/home/juancarlos/Desarrollo/movil/ElDirectorioAndroid/elDirectorioMX/src/main/res/layout/activity_info_club.xml -->